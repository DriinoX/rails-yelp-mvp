<h1>Les restaurants</h1>

<% @restaurants.each do |restaurant|%>
  <div class="banner_resto" style="background-image: linear-gradient(179deg, rgba(255,255,255,0) 0%, rgba(0,0,0,1) 100%), url('https://picsum.photos/1300/400')">
    <h2> <%= link_to restaurant.name, restaurant_path(restaurant.id) %></h2>
    <p> <%= restaurant.category %> </p>
    <p> <%= restaurant.address %> </p>
  </div>
<% end %>

<%= link_to 'Create new restaurant', new_restaurant_path %>

